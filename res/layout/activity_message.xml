<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/message_empty_image"
        style="@style/none_fill_parent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_empty_order"
        android:layout_centerInParent="true"
        />
    
	<TextView 
	    android:id="@+id/message_empty_text"
	    style="@style/none_fill_parent"
	    android:textAppearance="@style/gray_18"
	    android:text="@string/message_empty"
	    android:layout_below="@id/message_empty_image"
	    android:layout_centerHorizontal="true"
	    />
</RelativeLayout>
