<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/user_info_portrait"
        style="@style/width_fill_parent"
        android:layout_marginBottom="10dp"
        android:background="@drawable/list_item_click"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            style="@style/none_fill_parent"
            android:layout_margin="15dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/login_name"
            android:textAppearance="@style/black_18" />

        <ImageView
            android:id="@+id/user_info_portrait_image"
            style="@style/none_fill_parent"    
            android:layout_marginRight="50dp"    
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"               
            android:background="@drawable/user_no_image"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>
    
    <LinearLayout 
        style="@style/width_fill_parent"
        android:background="@drawable/list_item_click"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/user_info_username"
            style="@style/none_fill_parent"
            android:layout_margin="15dp"
            android:text="@string/login_name"
            android:textAppearance="@style/black_18"
            android:gravity="center"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/user_info_changpwd"
        style="@style/width_fill_parent"
        android:background="@drawable/list_item_click"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/none_fill_parent"
            android:layout_margin="15dp"
            android:text="@string/change_pwd"
            android:textAppearance="@style/black_18"
            android:gravity="center"
            />
    </LinearLayout>
	
</LinearLayout>
