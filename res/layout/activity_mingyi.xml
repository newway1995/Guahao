<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/mingyi_list"
        style="@style/both_fill_parent"  >
		
        <ListView
            android:id="@+id/mingyi_listview"
            style="@style/both_fill_parent"
            android:divider="@null"
            android:background="@android:color/transparent" >            
        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>
	
    <Button 
	    android:id="@+id/news_click_more"
	    style="@style/none_fill_parent"
	    android:text="@string/news_click_more"
	    android:textAppearance="@style/blue_18"
	    android:layout_gravity="center"
	    />
</LinearLayout>
