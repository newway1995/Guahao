<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"       
    android:orientation="horizontal" >
    
	<ImageView
        android:id="@+id/item_jibing_image"
        style="@style/none_fill_parent"
        android:layout_gravity="left|top"
        android:contentDescription="@string/app_name"
        android:background="@drawable/head_pic_mask_small"
        />  
    <LinearLayout 
        style="@style/none_fill_parent"
        android:orientation="vertical">
        <TextView
	        android:id="@+id/item_jibing_title"
	        style="@style/none_fill_parent"
	        android:textAppearance="@style/blue_14"
	        android:text="@string/app_name"
	        android:layout_marginBottom="5dp"
	        />
        <TextView
	        android:id="@+id/item_jibing_description"
	        style="@style/none_fill_parent"
	        android:textAppearance="@style/gray_dark_12"
	        android:text="@string/app_name"
	        android:layout_marginBottom="5dp"
	        />                
     </LinearLayout>     
</LinearLayout>
