<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical" >
    
	<TextView 
	    android:id="@+id/item_mingyi_title"
	    android:textAppearance="@style/black_18"
	    android:text="@string/app_name"
	    style="@style/none_fill_parent"/>
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@drawable/doct_list_item_divider"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    />
	<RelativeLayout 
	    style="@style/width_fill_parent"	    
	    android:orientation="horizontal">
	    <ImageView
	        android:id="@+id/item_mingyi_image"
	        style="@style/none_fill_parent"
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/doctor_empty_image_light"
	        android:contentDescription="@string/app_name"
	        />
	    <TextView
	        android:id="@+id/item_mingyi_description"
	        style="@style/none_fill_parent"
	        android:textAppearance="@style/black_14"
	        android:text="@string/app_name"
	        android:layout_marginLeft="15dp"
	        android:layout_marginBottom="5dp"
	        android:layout_toRightOf="@id/item_mingyi_image"
	        />
	    <TextView
	        android:id="@+id/item_mingyi_time"
	        style="@style/none_fill_parent"
	        android:textAppearance="@style/gray_14"
	        android:layout_marginLeft="15dp"
	        android:text="@string/about_us"
	        android:layout_below="@id/item_mingyi_description"
	        android:layout_toRightOf="@id/item_mingyi_image"
	        />
	</RelativeLayout>
</LinearLayout>
